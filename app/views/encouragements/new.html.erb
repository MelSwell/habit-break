<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |msg| %>
      <li style="color: red;"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @encouragement do |f| %>
  <%= f.hidden_field :user_id, value: cookies[:user_id] %>
  <%= f.hidden_field :habit_log_id, value: @habit_log.id %>

  <%= f.label :comment %><br>
  <%= f.text_area :comment %><br>

  <%= f.submit %>
<% end %>